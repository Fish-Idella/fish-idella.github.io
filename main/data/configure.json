[
    {
        "type": "layer",
        "psid": "settings",
        "icon": "<i class=\"fa-solid fa-sliders\"></i>",
        "text": "常规设置",
        "inner": [
            {
                "type": "layer",
                "psid": "weather",
                "text": "天气（静态页面，功能受限）",
                "inner": [
                    {
                        "type": "switch",
                        "psid": "boolean_show_weather",
                        "text": "首页显示天气",
                        "long_text": "在网页左上角显示天气情况。"
                    },
                    {
                        "type": "switch",
                        "psid": "boolean_auto_ip",
                        "text": "自动定位城市",
                        "long_text": "通过IP地址归属地模拟定位\uff0c真实位置可能存在误差。",
                        "show": [
                            "boolean_show_weather"
                        ]
                    },
                    {
                        "type": "switch",
                        "psid": "boolean_auto_browser",
                        "text": "硬件定位城市\uff08无效\uff09",
                        "long_text": "需要用户同意授权才能使用\uff0c定位精确度更高。",
                        "show": [
                            "boolean_show_weather",
                            "boolean_auto_ip"
                        ]
                    },
                    {
                        "type": "input",
                        "psid": "string_local_city",
                        "text": "手动定位城市",
                        "long_text": "填入县/区级地名\uff0c比如\uff1a“<b>中国-北京市-海淀区</b>”\uff0c直接填入“<b>海淀</b>”\uff0c市区直接填入“<b>北京</b>”。",
                        "show": [
                            "boolean_show_weather"
                        ],
                        "hide": [
                            "boolean_auto_ip"
                        ]
                    },
                    {
                        "type": "button",
                        "psid": "get_local_city",
                        "text": "获取定位",
                        "long_text": "获取当前城市。",
                        "value": "获取定位",
                        "show": [
                            "boolean_show_weather"
                        ],
                        "hide": [
                            "boolean_auto_ip"
                        ]
                    }
                ]
            },
            {
                "type": "layer",
                "psid": "search_engine",
                "text": "搜索",
                "inner": [
                    {
                        "type": "switch",
                        "psid": "boolean_search_history",
                        "text": "搜索历史",
                        "long_text": "当搜索框无内容时显示历史搜索记录，关闭后会清空历史且不再记录。"
                    },
                    {
                        "type": "object-list",
                        "psid": "map_search_engine",
                        "text": "搜索引擎列表",
                        "long_text": "选择1~3个搜索引擎作为常用",
                        "max": 3,
                        "list": "map_search_engine",
                        "value": "map_search_engine_show"
                    }
                ]
            }
        ]
    },
    {
