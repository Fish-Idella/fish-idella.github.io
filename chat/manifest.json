{
    "manifest_version": 3,
    "name": "示例插件",
    "version": "1.0",
    "description": "简短描述",
    "permissions": [
        "storage",
        "sidePanel",
        "activeTab",
        "scripting",
        "declarativeNetRequest",
        "unlimitedStorage",
        "contextMenus",
        "tts",
        "notifications"
    ],
    "action": {},
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ],
            "css": [
                "css/content.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}